@page "/"
@*@page "/{RouteParameter}"*@

@if (DataService.Settings.ShowHelp)
{
    <HelpComponent />
}
else if (State.ShowOptions)
{
    <OptionsComponent />
}
else
{
    <Tabs SelectedTab="@State.SelectedTab" SelectedTabChanged="@OnSelectedTabChanged">
        <Items>
            <Tab Name="Habits">Habits</Tab>
            <Tab Name="Goals">Goals</Tab>
            <Tab Name="Tasks">Tasks</Tab>
        </Items>
        <Content>
            <TabPanel Name="Habits">
                <HabitsComponent />
            </TabPanel>
            <TabPanel Name="Goals">
                <GoalsComponent />
            </TabPanel>
            <TabPanel Name="Tasks">
                <TasksComponent />
            </TabPanel>
        </Content>
    </Tabs>
}
