<div id="overlay" class="col-lg-12 col-xl-6 px-1 px-sm-3 d-flex">
    <div class="card flex-grow-1">

        <div class="card-body p-2 p-sm-3">

            @if (State.SelectedTask != null)
            {
                @if (State.EditTask)
                {
                    <MemoEdit Class="text-monospace" Rows="@State.SelectedTask.NotesLines" Text="@State.SelectedTask.Notes" TextChanged="@OnNotesChanged" Placeholder="Add notes" />
                }
                else
                {
                    <MemoEdit Class="text-monospace" ReadOnly="true" Rows="@State.SelectedTask.NotesLines" Text="@State.SelectedTask.Notes" Placeholder="Edit task to add notes" />
                }
            }

        </div>

    </div>
</div>